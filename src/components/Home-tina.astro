---
import Layout from "../layouts/Layout.astro";
import type { ShortPostData } from "@/lib/tina";

interface Props {
  posts: ShortPostData[];
  page: number;
  more: boolean;
}

const { posts, page, more } = Astro.props;
---

<script>
  import { mount as mountRelativeTime } from "../components/RelativeTime";
  import { mount as mountSearch } from "../components/Search";

  mountRelativeTime("data-acc-time");
  mountSearch("#search-container");

  // 滚动时文字逐渐消失效果
  const handleScroll = () => {
    const titleElement = document.querySelector(".blog-title") as HTMLElement;
    if (!titleElement) return;

    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    const maxScroll = 50;

    const opacity = Math.max(0, 1 - scrollTop / maxScroll);
    titleElement.style.opacity = opacity.toString();
  };

  // 添加滚动监听
  window.addEventListener("scroll", handleScroll);
  // 初始化时执行一次
  handleScroll();
</script>

<Layout title="Aleks">
  <div slot="operations" id="editor-operarions" class="flex gap-2 items-center">
    <div id="search-container"></div>
  </div>
  <div
    class="w-full h-40 items-center flex justify-center bg-gradient-to-r from-red-500 via-yellow-500 via-green-500 via-blue-500 to-purple yellow-500 md:pb-15"
  >
    <div
      class="blog-title font-bold text-2xl text-white md:text-5xl transition-opacity duration-300"
    >
      AleksChen's Blog
    </div>
  </div>
  <main>
    <div class="content">
      {
        posts.map((item) => (
          <>
            <div class="post-item px-4 py-4">
              <a
                href={`/post/${item.slug}`}
                class="pb-4 flex justify-between items-center group"
              >
                <div class="flex flex-col mr-2">
                  <h1 class="page-title w-[fit-content] text-2xl transition-all font-semibold group-hover:underline">
                    {item.title}
                  </h1>
                  <p class="mt-4 text-text text-opacity-60 text-sm">
                    {item.intro}
                  </p>
                </div>
                {item.cover && (
                  <img
                    class="w-16 h-16 rounded object-cover drop-shadow-[4px_4px_3px_rgba(0,0,0,0.3)]"
                    src={item.cover.src}
                    alt={item.cover.alt || item.title}
                  />
                )}
              </a>
              <div class="flex justify-between items-center gap-2">
                <div class="flex-1 flex gap-2 overflow-x-hidden">
                  {item.tags.map((tag) => (
                    <a
                      href={`/tag/${encodeURIComponent(tag)}`}
                      class="text-sm text-gray hover:text-black"
                    >
                      #{tag}
                    </a>
                  ))}
                </div>
                <div
                  data-acc-time={item.createTime}
                  class="text-end text-xs text-gray"
                />
              </div>
            </div>
            <hr />
          </>
        ))
      }
      {
        more && (
          <div class="w-full flex justify-center">
            <a href={`/${page + 1}`} class="mt-4 text-blue">
              Load More
            </a>
          </div>
        )
      }
    </div>
  </main>
</Layout>

