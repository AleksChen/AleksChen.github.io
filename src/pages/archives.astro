---
import Layout from "@/layouts/Layout.astro";
import { getPostList, type ShortPostData } from "@/lib/posts";

const allPosts = await getPostList();

// 按年份分组
const postsByYear = new Map<number, ShortPostData[]>();
allPosts.forEach((post) => {
  const year = new Date(post.createTime).getFullYear();
  if (!postsByYear.has(year)) {
    postsByYear.set(year, []);
  }
  postsByYear.get(year)!.push(post);
});

// 按年份倒序排列
const sortedYears = Array.from(postsByYear.keys()).sort((a, b) => b - a);
---

<Layout title="归档" description="所有文章归档">
  <div class="flex flex-col gap-8">
    <section class="text-center py-8 md:py-12 animate-slide-in">
      <h1
        class="text-4xl md:text-5xl font-bold text-text mb-4 drop-shadow-[2px_2px_0_var(--color-shadow)]"
      >
        归档
      </h1>
      <p class="text-text-muted text-lg max-w-2xl mx-auto">
        共 {allPosts.length} 篇文章
      </p>
    </section>

    <div class="flex flex-col gap-12">
      {
        sortedYears.map((year, yearIndex) => {
          const yearPosts = postsByYear.get(year)!;
          return (
            <div
              class="flex flex-col gap-6"
              style={`animation-delay: ${yearIndex * 100}ms`}
            >
              <h2 class="text-2xl md:text-3xl font-bold text-text border-b-2 border-text pb-2">
                {year}
                <span class="text-lg text-text-muted font-normal ml-2">
                  ({yearPosts.length} 篇)
                </span>
              </h2>

              <div class="flex flex-col gap-4">
                {yearPosts.map((post, index) => (
                  <article
                    class="group relative card transition-all duration-300"
                    style={`animation-delay: ${index * 50}ms`}
                  >
                    <div class="flex flex-col md:flex-row gap-4 md:items-start justify-between">
                      <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-3 text-xs text-text-muted mb-2">
                          <span class="flex items-center gap-1">
                            <div class="i-ri:calendar-line" />
                            {new Date(post.createTime).toLocaleDateString("zh-CN", {
                              year: "numeric",
                              month: "long",
                              day: "numeric",
                            })}
                          </span>
                        </div>

                        <h3 class="text-lg md:text-xl font-bold text-text mb-2">
                          <a
                            href={`/post/${post.slug}`}
                            class="group-hover:underline decoration-2 underline-offset-4 transition-colors hover:text-primary"
                          >
                            {post.title}
                          </a>
                        </h3>

                        {post.intro && (
                          <p class="text-text-muted text-sm md:text-base line-clamp-2 mb-3 leading-relaxed">
                            {post.intro}
                          </p>
                        )}

                        <div class="flex flex-wrap gap-2">
                          {post.tags.map((tag) => (
                            <a
                              href={`/tag/${encodeURIComponent(tag)}`}
                              class="inline-flex items-center px-2 py-0.5 rounded-sm text-xs font-bold border border-text text-text bg-transparent shadow-[2px_2px_0_0_var(--color-text)] hover:translate-y-[1px] hover:translate-x-[1px] hover:shadow-none transition-all"
                            >
                              #{tag}
                            </a>
                          ))}
                        </div>
                      </div>

                      {post.cover && (
                        <div class="flex-shrink-0 w-full md:w-24 h-24 rounded-sm overflow-hidden border-2 border-text shadow-[4px_4px_0_0_var(--color-text)]">
                          <a href={`/post/${post.slug}`} class="block w-full h-full">
                            <img
                              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                              src={post.cover.src}
                              alt={post.cover.alt || post.title}
                              loading="lazy"
                            />
                          </a>
                        </div>
                      )}
                    </div>
                  </article>
                ))}
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</Layout>

